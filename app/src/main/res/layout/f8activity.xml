<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:focusable="false"
    android:focusableInTouchMode="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火车票查询"
        android:id="@+id/textView32"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textColor="#ff000000"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText8"
        android:layout_alignParentStart="false"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toStartOf="@+id/textView34"
        android:layout_alignEnd="@+id/textView32"
        android:gravity="bottom|center_horizontal"
        android:text="成都"
        android:layout_below="@+id/textView32"
        android:background="@android:drawable/editbox_background_normal" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText9"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignEnd="@+id/editText8"
        android:layout_toEndOf="@+id/textView33"
        android:gravity="bottom|center_horizontal"
        android:background="@android:drawable/editbox_background_normal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="出发城市:"
        android:id="@+id/textView33"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText8"
        android:layout_toStartOf="@+id/textView32"
        android:focusableInTouchMode="true"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="目的城市:"
        android:id="@+id/textView34"
        android:textSize="20dp"
        android:layout_below="@+id/editText8"
        android:layout_alignStart="@+id/textView33"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请选择日期"
        android:id="@+id/textView36"
        android:gravity="bottom|center_horizontal"
        android:textSize="20dp"
        android:background="@android:drawable/editbox_background_normal"
        android:layout_below="@+id/editText9"
        android:layout_alignEnd="@+id/editText9"
        android:layout_toEndOf="@+id/textView33" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="日    期:"
        android:id="@+id/textView37"
        android:textSize="20dp"
        android:layout_alignEnd="@+id/textView34"
        android:layout_alignStart="@+id/textView34"
        android:layout_alignBottom="@+id/textView36" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查询"
        android:id="@+id/button7"
        android:textSize="20dp"
        android:layout_below="@+id/textView37"
        android:layout_alignEnd="@+id/textView36"
        android:layout_toEndOf="@+id/textView37"
        android:background="@drawable/button_shape"
        android:layout_marginTop="10dp"
        android:textColor="#ffffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView6"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentStart="true"
        android:dividerHeight="0dp"
        android:divider="#00ffffff" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView12"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView34"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignLeft="@+id/textView33"
        android:src="@drawable/ff8"
        android:scaleType="fitCenter" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView13"
        android:layout_alignBottom="@+id/textView32"
        android:layout_alignEnd="@+id/listView6"
        android:layout_toEndOf="@+id/textView32"
        android:src="@drawable/ff8"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter" />

</RelativeLayout>
